<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    android:orientation="vertical"

    tools:context=".IncomingWork">

    <ImageView
        android:id="@+id/sell"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/imagebackgroun"
        android:padding="5dp"
        android:onClick="clickSell"
        app:srcCompat="@drawable/ic_add_shopping_cart_black_24dp"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/textsell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Сотув"
        android:onClick="clickSell"
        android:textColor="@color/colorBlue"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/products"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:onClick="clickProducts"
        android:background="@drawable/imagebackgroun"
        app:srcCompat="@drawable/ic_receipt_black_24dp" />
    <TextView
        android:id="@+id/textproducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Махсулотлар"
        android:onClick="clickProducts"
        android:textColor="@color/colorBlue"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/incomings"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:onClick="clickIncomings"
        android:background="@drawable/imagebackgroun"
        app:srcCompat="@drawable/ic_archive_black_24dp" />
    <TextView
        android:id="@+id/textincomings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Кирим"
        android:onClick="clickIncomings"
        android:textColor="@color/colorBlue"
        android:textSize="18sp" />

</LinearLayout>